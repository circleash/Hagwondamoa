<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.hagwondamoa.post.dao.PostDAO">
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
 			, `isWho`
 			, `userName`
 			, `userSchool`
 			, `category`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 			) VALUES (
 				#{userId}
 				,#{isWho}
 				,#{userName}
 				,#{userSchool}
 				,#{category}
 				,#{content}
 				,#{imagePath}
 				, now()
				, now()
 			);
 	
 	</insert>
 	
 	<select id="selectPostList" resultType="com.hagwondamoa.post.model.Post"
 	parameterType="string">
 		SELECT
 			`id`
 			, `userId`
 			, `isWho`
 			, `userName`
 			, `userSchool`
 			, `category`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`category` = #{category}
 		ORDER BY `id` DESC
 			
 	</select>
 	
 	<select id="selectPost" resultType="com.hagwondamoa.post.model.Post"
 	parameterType="integer">
 		SELECT
 			`id`
 			, `userId`
 			, `isWho`
 			, `userName`
 			, `userSchool`
 			, `category`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{id}
 		
 	
 	</select>
</mapper>